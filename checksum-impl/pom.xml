<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<parent>
		<groupId>ch.sourcepond</groupId>
		<artifactId>bundle</artifactId>
		<version>0.5.0</version>
		<relativePath />
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>ch.sourcepond.io</groupId>
	<artifactId>checksum-impl</artifactId>
	<version>0.1.0-SNAPSHOT</version>
	<inceptionYear>2015</inceptionYear>
	<packaging>bundle</packaging>
	<description>Provides an implementation for the checksum-api bundle.</description>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>ch.sourcepond.io</groupId>
				<artifactId>checksum-api</artifactId>
				<version>0.1.0-SNAPSHOT</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<dependency>
			<groupId>ch.sourcepond.io</groupId>
			<artifactId>checksum-api</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-codec</groupId>
			<artifactId>commons-codec</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<Bundle-Blueprint>
							ch/sourcepond/io/checksum/impl/components.xml,
							ch/sourcepond/io/checksum/impl/import.xml,
							ch/sourcepond/io/checksum/impl/export.xml
						</Bundle-Blueprint>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
